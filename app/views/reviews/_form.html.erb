<%= simple_form_for([@company, @company.reviews.build]) do |r| %>
<div id ="rating-form">
  <label>Rating</label>
</div>
<%= r.input :comment %>
<%= link_to "Back", :back, class: "btn btn-custom" %>
<%= r.button :submit, :class => "btn-custom2" %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>


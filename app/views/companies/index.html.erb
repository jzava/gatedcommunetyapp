<h5><em> Recently added companies at the top. </em></h5> 

<h1 class="current-category"><%= params[:category] %></h1>
<% if @companies.count == 0 %>
<h1> There are no companies currently in this category </h1>
<% else %>
<div class="fb-share-button" data-href="http://www.gatedcommunety.com/" data-layout="button" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fwww.gatedcommunety.com%2F&amp;src=sdkpreparse">Share</a></div>


<div class="row">
<% @companies.each do |company| %>
  <div class="col-md-3">
<a href="/companies/<%= company.id %>"> 
  <%= image_tag company.company_img.url(:company_index), class: "company" %>
    </a>
  </div>

<% end %>
  </div>

<% end%>


